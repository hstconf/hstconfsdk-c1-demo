<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_site"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="服务器地址："
        android:textSize="16sp"
        app:autoSizeMaxTextSize="@dimen/dp_20" />

    <EditText
        android:id="@+id/et_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Site"
        android:padding="5dp"
        android:text="http://82.157.11.12:8088"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="用户名："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:padding="5dp"
            android:text="test1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="密码："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:padding="5dp"
            android:password="true"
        android:text="abc-123"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_confId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="会议号："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_confid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入会议号"
            android:padding="5dp"
            android:text="10732422"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3"
        android:visibility="gone">

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="入会昵称："
        android:textSize="16sp"
        app:autoSizeMaxTextSize="@dimen/dp_20" />
    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="入会昵称"
        android:padding="5dp"
        android:text="Frank"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_confid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="会议号："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <CheckBox
            android:id="@+id/cb_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="创建新会议"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_conftopic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新会议主题："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_confTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="新会议主题"
            android:text="视频会议行业研讨"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confpwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="入会密码："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_confpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="入会密码"
            android:text=""
            android:padding="5dp"
            android:password="true"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friendlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的好友"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lv_friendlist"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>
    <CheckBox
        android:id="@+id/cb_conf_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多人聊天模式（3人及以上）"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_refresh"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:onClick="btnRefreshClick"
            android:layout_weight="1"
            android:text="刷新好友列表"
            android:visibility="gone"/>
        <Button
            android:id="@+id/bt_online"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:onClick="btnOnlineClick"
            android:layout_weight="1"
            android:text="登录和刷新在线状态"
            android:visibility="gone"/>
        <Button
            android:id="@+id/bt_invite"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:onClick="btnInviteClick"
            android:layout_weight="1"
            android:text="邀请（新会议）" />
        <Button
            android:id="@+id/bt_inviteByConfId"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:onClick="btnInviteByConfIdClick"
            android:layout_weight="1"
            android:text="邀请(已有会议)" />
        <Button
            android:id="@+id/bt_accept"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:onClick="btnAcceptClick"
            android:text="接受邀请" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="20sp"
        android:text=""
        android:textAlignment="center"/>
</LinearLayout>

