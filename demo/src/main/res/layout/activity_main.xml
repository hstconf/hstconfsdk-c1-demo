<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginVertical="@dimen/dp_10"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="普通会议模式"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

    <TextView
        android:id="@+id/tv_site"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="服务器地址："
        android:textSize="16sp"
        app:autoSizeMaxTextSize="@dimen/dp_20" />

    <EditText
        android:id="@+id/et_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Site"
        android:padding="5dp"
        android:text="http://82.157.11.12:8088"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="用户名："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:padding="5dp"
            android:text="test1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="密码："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:padding="5dp"
            android:password="true"
            android:text="abc-123"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="入会昵称："
        android:textSize="16sp"
        app:autoSizeMaxTextSize="@dimen/dp_20" />
    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="入会昵称"
        android:padding="5dp"
        android:text="Frank"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_confid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="会议号："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_confid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
            android:hint="会议号"
            android:inputType="number"
            android:padding="0dp"
            android:text="10732422"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="创建新会议"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_conftopic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新会议主题："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_confTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="新会议主题"
            android:text="视频会议行业研讨"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confpwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="入会密码："
            android:textSize="16sp"
            app:autoSizeMaxTextSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_confpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="入会密码"
            android:text=""
            android:padding="5dp"
            android:password="true"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_enter_conf_list"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FF0000"
            android:layout_marginTop="@dimen/dp_10"
            android:onClick="btnEnterConfListClick"
            android:text="直接进入会议列表" />

        <Button
            android:id="@+id/bt_join"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/dp_5"
            android:onClick="btnJoinClick"
            android:text="使用昵称（不登录）加入会议" />

        <Button
            android:id="@+id/bt_join2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/dp_5"
            android:onClick="btnJoin2Click"
            android:text="使用账号（登录）加入会议" />

        <Button
            android:id="@+id/bt_create"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/dp_5"
            android:onClick="btnCreateClick"
            android:text="使用账号（登录）建会和加会（需权限）" />

        <Button
            android:id="@+id/bt_chat_activity"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FF0000"
            android:layout_marginTop="@dimen/dp_10"
            android:onClick="btnChatClick"
            android:textSize="20sp"
            android:text="进入即时通讯模式"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>

